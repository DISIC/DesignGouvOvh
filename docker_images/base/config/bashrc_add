
#
# deconnexion automatique en cas d'inactivite
#
if [[ -z $TMOUT ]]; then readonly TMOUT=300; fi

#
# no history
#
HISTSIZE=0
HISTFILE=/dev/null
HISTFILESIZE=0
export HISTSIZE HISTFILE HISTFILESIZE

#
# umask
#
umask 077

alias hist='HISTSIZE=100000; set -o vi'
alias act='while : ; do echo -n "."; sleep 10; done'

